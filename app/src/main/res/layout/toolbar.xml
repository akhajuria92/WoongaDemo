<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/drawerIcon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_centerVertical="true"
        android:tint="@android:color/white"
        android:padding="@dimen/_4sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:visibility="gone"
        android:src="@drawable/ic_drawer_button" />

    <ImageView
        android:layout_toRightOf="@id/drawerIcon"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:src="@drawable/ic_toolbar_icon" />


    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_alignParentRight="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/priceOut"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner_background_stroke_golden"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_30sdp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp" />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginLeft="-10dp"
            android:src="@drawable/ruppee_logo" />

    </FrameLayout>

